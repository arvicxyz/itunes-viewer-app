<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="Theme.Splash" parent="Theme.Main.Base.NoActionBar" />

    <style name="Theme.Main" parent="Theme.Main.Base" />

    <style name="Theme.Main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Main.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:statusBarColor">@color/colorBlackBg</item>
        <item name="android:background">@color/colorBlackBg</item>
    </style>

    <style name="Theme.Main.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="buttonStyle">@style/Theme.Button</item>
        <item name="android:buttonStyle">@style/Theme.Button</item>
        <item name="editTextStyle">@style/Theme.EditText</item>
        <item name="android:editTextStyle">@style/Theme.EditText</item>
        <item name="alertDialogTheme">@style/Theme.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>

    <style name="Theme.Button" parent="android:Widget.Material.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.EditText" parent="android:Widget.EditText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/input_font_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="Theme.AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Theme.AlertDialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.AlertDialog.NegativeButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.AlertDialog.NeutralButton</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/Theme.AlertDialog.PositiveButton
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Theme.AlertDialog.NegativeButton
        </item>
        <item name="android:buttonBarNeutralButtonStyle">
            @style/Theme.AlertDialog.NeutralButton
        </item>
    </style>

    <style name="Theme.AlertDialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.AlertDialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.AlertDialog.NeutralButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="dividerBase">
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="dividerHorizontal" parent="dividerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
    </style>

    <style name="dividerVertical" parent="dividerBase">
        <item name="android:layout_width">@dimen/divider_size</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>